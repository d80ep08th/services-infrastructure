{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name": "telegram-bot",
            "image" : "tattletech/archive-telegram-bot:latest",
            "memory": 256,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 8443,
                    "hostPort": 3000
                }
            ]
        },
        {
            "name": "factcheck-scraper-api",
            "essential": true, 
            "memory": 256,
            "memoryReservation": 256,
            "image":"tattletech/factcheck-scraper:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 3001
                }
            ]
        },
        {
            "name": "job-redis-queue",
            "essential": true,
            "image": "redis",
            "memory": 256,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 6379,
                    "hostPort": 6379
                }
            ],
            "mountPoints": [
                {
                    "containerPath": "/data",
                    "sourceVolume": "redisVolume"
                }
            ]
        },
        {
            "name": "archive-server",
            "essential": true,
            "image": "tattletech/archive-server:latest",
            "memory": 256,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 3003,
                    "hostPort": 3002
                }
            ],
            "links": [
                "job-redis-queue"
            ]
        }
    ],
    "volumes": [
        {
            "host": {
                "sourcePath": "/home/redis/"
            },
            "name": "redisVolume"
        }
    ]
}